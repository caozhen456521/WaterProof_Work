<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffffff"
    >
    
    <ImageView 
        android:id="@+id/box_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/system_info"/>
    <TextView 
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/box_img"
        android:layout_marginLeft="12dp"
        android:layout_alignTop="@id/box_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统消息"/>
    <TextView 
         android:textColor="#000000"
         android:layout_toRightOf="@id/box_img"
        android:layout_marginLeft="12dp"
        android:layout_alignBottom="@id/box_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无提示"/>
    <ImageView 
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arrows"/>
    <View 
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cdcdcd"/>
    

</RelativeLayout>
