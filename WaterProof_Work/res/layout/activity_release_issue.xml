<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".ReleaseIssueActivity" >

    <RelativeLayout
        android:id="@+id/ri_rl_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#efefef" >

        <Button
            android:id="@+id/ri_bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:text=" × "
            android:textColor="#6b6d6a"
            android:textSize="30sp" />

        <Button
            android:id="@+id/ri_bt_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/send_img" />

        <Button
            android:id="@+id/ri_bt_addimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:background="@drawable/image_img" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#808080" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/ri_et_issue_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/hui_rectangle_shape"
            android:hint="请输入问题/标题"
            android:maxLines="2"
            android:padding="7dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ri_tv_issue_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/hui_rectangle_shape"
            android:hint="请选择问题类型"
            android:maxLines="2"
            android:padding="7dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ri_et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:bufferType="spannable"
            android:gravity="top|left"
            android:hint="添加问题的补充说明..."
            android:inputType="textMultiLine"
            android:padding="7dp"
            android:autoLink="web"
            android:textColor="#000000"
            android:textSize="16sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

</LinearLayout>