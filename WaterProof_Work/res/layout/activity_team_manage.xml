<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".TeamManageActivity" >

    <com.qingzu.uitest.view.MyTitleView
        android:id="@+id/atm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="队员管理"
        app:left_height="30dp"
        app:left_src="@drawable/selector_title_back"
        app:left_width="40dp"
        app:right_text="添加队员"
        app:right_text_size="13sp"
        app:title_background="#383b3d" />

    <ExpandableListView
        android:id="@+id/atm_elv_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:childDivider="#f5f5f5"
        android:divider="@null"
        android:dividerHeight="0.5dp"
        android:gravity="center"
        android:listSelector="#00000000"
        android:scrollbars="none" />

</LinearLayout>