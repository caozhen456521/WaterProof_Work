<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ShowStrengthActivity" >

    <com.qingzu.uitest.view.MyTitleView
        android:id="@+id/ass_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="我的施工队"
        app:left_height="30dp"
        app:left_src="@drawable/selector_title_back"
        app:left_width="40dp"
        app:right_vidibility="gone"
        app:title_background="#383b3d" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_gray_line"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/ass_et_strength_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:gravity="left|top"
                    android:hint="请输入实力描述,让老板更了解你"
                    android:inputType="textMultiLine"
                    android:minLines="6"
                    android:padding="15dp"
                    android:textSize="13sp" />
            </LinearLayout>

            <Button
                android:id="@+id/ass_bt_commit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="11.5dp"
                android:layout_marginRight="11.5dp"
                android:layout_marginTop="46dp"
                android:background="@drawable/shape_rounded_blue_button"
                android:text="确定"
                android:textColor="@drawable/selector_button_font_white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>