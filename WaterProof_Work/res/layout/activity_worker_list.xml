<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5F5F5"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.qingzu.waterproof_work.WorkerListActivity" >
    
    
     <com.qingzu.uitest.view.MyTitleView
        android:id="@+id/worker_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="工人列表"
        app:left_height="30dp"
        app:left_src="@drawable/selector_title_back"
        app:left_width="40dp"
        app:right_vidibility="gone" />
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="已派工人"
         android:textColor="#000000"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="15dp"/>
      <com.qingzu.custom.control.ZListView
            android:id="@+id/worker_list_zlistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:divider="@null"
            android:scrollbars="none" />

   

</LinearLayout>
