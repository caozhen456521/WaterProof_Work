<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
     android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.qingzu.waterproof_work.ReleaseActivity" >

    <com.qingzu.uitest.view.MyTitleView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="发布"
        app:left_height="30dp"
        app:left_src="@drawable/selector_title_back"
        app:left_width="40dp"
        app:title_background="@color/title_background_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/release_edt"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:hint="请描述工程详情,展示你的实力 !(100字以内)"
            android:maxLength="100"
            android:textSize="15sp"
            android:typeface="serif" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" >

            <me.multi_image_selector.view.HorizontalListView
                android:id="@+id/noScrollgridview"
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:layout_centerInParent="true" >
            </me.multi_image_selector.view.HorizontalListView>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/release_bt_commit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/forget_password"
        android:layout_marginLeft="11.5dp"
        android:layout_marginRight="11.5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_rounded_blue_button"
        android:text="发布"
        android:textColor="@drawable/selector_button_font_white"
        android:textSize="18sp" />

</LinearLayout>