<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/lwoi_room"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/lwoi_iv_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/lwoi_iv_photo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lwoi_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专业防水补漏"
                android:textColor="@color/title_background_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lwoi_tv_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="联系人:马桶"
                android:textColor="@color/my_lightgray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lwoi_tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="下单时间:2016年7月14日"
                android:textColor="@color/my_lightgray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lwoi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="状态:无敌"
                android:textColor="@color/my_lightgray"
                android:textSize="12sp" />
        </LinearLayout>
        
        <Button 
            android:layout_marginTop="28dp"
            android:id="@+id/lwoi_chat_bt"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/click_chat"/>

        <Button
            android:id="@+id/lwoi_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_gray_line"
            android:paddingBottom="3dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="3dp"
            android:text="提醒老板"
            android:textColor="@color/my_lightgray"
            android:textSize="13sp" />

        <Button
            android:id="@+id/lwoi_bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/lwoi_bt"
            android:background="@drawable/shape_gray_line"
            android:paddingBottom="3dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="3dp"
            android:text="提醒老板"
            android:textColor="@color/my_lightgray"
            android:textSize="13sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>