<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.qingzu.waterproof_work.MyConstructionTeamActivity" >

    <com.qingzu.uitest.view.MyTitleView
        android:id="@+id/my_construction_team_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="施工队管理	"
        app:left_height="30dp"
        app:left_src="@drawable/selector_title_back"
        app:left_width="40dp"
         />

    <LinearLayout
        android:id="@+id/two_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/join_construction_team_img"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:src="@drawable/join_team" />

        <ImageView
            android:id="@+id/deal_invite_img"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:src="@drawable/deal_invite" />

        <ImageView
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:src="@drawable/grouping_manage" />
    </LinearLayout>

    <com.qingzu.custom.control.ZListView
        android:id="@+id/construction_team_list_zlv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:divider="@null"
        android:scrollbars="none" />

</LinearLayout>