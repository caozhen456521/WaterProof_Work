<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    <RelativeLayout
        android:id="@+id/state_recruit_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/call_phone_bt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="11.5dp"
            android:layout_marginRight="11.5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_rounded_blue_button"
            android:text="拨打电话"
            android:textColor="@drawable/selector_button_font_white"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/over_recruit_bt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="11.5dp"
            android:layout_marginRight="11.5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_rounded_blue_button"
            android:text="结束招工"
            android:textColor="@drawable/selector_button_font_white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/completed_recruit_bt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="11.5dp"
            android:layout_marginRight="11.5dp"
            android:layout_marginTop="15dp"
            android:background="#c1c1c1"
            android:text="完成招工"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/state_recruit_rl"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp" >

                    <TextView
                        android:id="@+id/construction_area_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="施工面积"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/recruit_construcyion_area_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/construction_area_tv"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/recruit_brower_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp" >

                    <TextView
                        android:id="@+id/construction_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="用工人数"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/recruit_construction_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/construction_number_tv"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/dai_que_ren_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp" >

                    <TextView
                        android:id="@+id/construction_start_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="开工时间"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/recruit_construction_start_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/construction_start_time_tv"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp" >

                    <TextView
                        android:id="@+id/construction_part_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="施工部位"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/recruit_construction_part_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/construction_part_tv"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp" >

                    <TextView
                        android:id="@+id/material_request_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="材料要求"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/recruit_material_request_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/material_request_tv"
                        android:textColor="#000000" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/boss_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/recruit_info_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_my_custom"
                    android:padding="11dp" >

                    <com.qingzu.uitest.view.RoundImageView
                        android:id="@+id/riv_recruit_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/defaultimg" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/riv_recruit_img"
                        android:layout_alignTop="@id/riv_recruit_img"
                        android:layout_toRightOf="@id/riv_recruit_img"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/recruit_contact_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:orientation="horizontal" >

                            <RatingBar
                                android:id="@+id/recruit_detail_assess_ratingbar"
                                style="@style/MyRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="5" />

                            <TextView
                                android:id="@+id/recruit_points_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:textColor="#000000" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发布招工数："
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/recruit_release_number_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/recruit_chat_bt"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/click_chat" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作地点:"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/recruit_working_place_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/recruit_detail_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/gongcheng"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/worker_captain_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="待确认工人:"
                    android:textColor="#000000" />

                <com.qingzu.custom.control.XListView
                    android:id="@+id/dai_que_ren__lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@null"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none" />

                <RelativeLayout
                    android:id="@+id/contact_worker_rl"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" >

                    <TextView
                        android:id="@+id/contact_worker_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:text="急需工人，请点这里，自己主动联系"
                        android:textColor="@drawable/red_orange" />

                    <View
                        android:layout_width="220dp"
                        android:layout_height="1dp"
                        android:layout_below="@id/contact_worker_tv"
                        android:layout_centerHorizontal="true"
                        android:background="#ed372c" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/wait_project_tv"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="请等待审核工程"
                    android:textColor="#fe9523"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>