<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.qingzu.waterproof_work.LoginBySmsCodeActivity" >
    
     <com.qingzu.uitest.view.MyTitleView
        android:id="@+id/login_by_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="短信验证码登录"
        app:left_height="30dp"
        app:left_src="@drawable/selector_title_back"
        app:left_width="40dp"
        app:right_text="下一步"
        app:title_background="@color/title_background_black" />
     <RelativeLayout
         android:layout_below="@id/login_by_code_title"
         android:paddingTop="10dp"
         android:layout_marginTop="20dp"
         android:layout_width="match_parent"
         android:layout_height="55dp"
         android:layout_marginLeft="11dp"
         android:layout_marginRight="11dp"
          >
          
         <EditText 
             android:paddingTop="10dp"
             android:paddingBottom="5dp"
             android:textColor="#3b3b3b"
             android:gravity="center_horizontal"
             android:maxEms="11"
             android:inputType="number"
             android:id="@+id/login_by_code_phone_et"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@null"
             android:hint="请输入您的手机号码"/>
         <View 
             android:layout_alignParentBottom="true"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#9ac0d5"/>
         
     </RelativeLayout>
    
    
</RelativeLayout>
