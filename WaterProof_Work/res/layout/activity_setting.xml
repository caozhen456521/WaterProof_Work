    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/setting_change_password_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_my_custom" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="密码修改"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="@color/black" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="#c8c8c8" />

        <RelativeLayout
            android:id="@+id/setting_clear_cache_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_my_custom" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="清除缓存"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/setting_clear_cache_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="123"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/arrows" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/setting_about_ezu_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_my_custom" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="关于e族"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/arrows" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/setting_login_out_bt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/forget_password"
        android:layout_marginLeft="11.5dp"
        android:layout_marginRight="11.5dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/shape_rounded_blue_button"
        android:text="退出登录"
        android:textColor="@drawable/selector_button_font_white"
        android:textSize="18sp" />

</LinearLayout>