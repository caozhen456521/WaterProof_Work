<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".PrivilegeListActivity" >

    <com.qingzu.uitest.view.MyTitleView
        android:id="@+id/apl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="十项特权"
        app:left_height="30dp"
        app:left_src="@drawable/selector_title_back"
        app:left_width="40dp"
        app:right_vidibility="gone" />

    <ExpandableListView
        android:id="@+id/apl_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:childDivider="#00000000"
        android:divider="#00000000"
        android:fastScrollEnabled="true"
        android:scrollbars="horizontal|none" />

</LinearLayout>