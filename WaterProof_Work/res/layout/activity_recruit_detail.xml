<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.qingzu.waterproof_work.RecruitDetailActivity" >

    <com.qingzu.uitest.view.MyTitleView
        android:id="@+id/recruit_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="招工详情"
        app:left_height="30dp"
        app:left_src="@drawable/selector_title_back"
        app:left_width="40dp"
        app:right_vidibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/recruit_detail_bascio_info_bt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="基本信息"
            android:textColor="@color/my_darkgray" />

        <Button
            android:id="@+id/recruit_detail_part_picture_show_bt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="部位图展示"
            android:textColor="@color/my_darkgray" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/recruit_detail_vp_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>