<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ServeCityActivity" >

    <com.qingzu.uitest.view.MyTitleView
        android:id="@+id/asc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="选择服务城市"
        app:left_height="30dp"
        app:left_src="@drawable/selector_title_back"
        app:left_width="40dp"
        app:right_text="确定"
        app:title_background="#383b3d" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:paddingBottom="7dp"
            android:paddingLeft="20dp"
            android:paddingRight="0dp"
            android:paddingTop="8dp"
            android:text="当前服务城市"
            android:textColor="#3b3b3b"
            android:textSize="16sp" />

        <Button
            android:id="@+id/lnsc_bt_compile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:text="编辑" />
    </RelativeLayout>

    <com.qingzu.uitest.view.TagListView
        xmlns:f="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lnsc_tagview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="16.0dip"
        f:horizontalSpacing="8dp"
        f:orientation="horizontal"
        f:verticalSpacing="6dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingBottom="7dp"
        android:paddingLeft="20dp"
        android:paddingRight="0dp"
        android:paddingTop="8dp"
        android:text="选择服务城市"
        android:textColor="#3b3b3b"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cdcdcd" />

    <ExpandableListView
        android:id="@+id/asc_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:childDivider="#00000000"
        android:divider="#00000000"
        android:fastScrollEnabled="true"
        android:scrollbars="horizontal|none" />

</LinearLayout>