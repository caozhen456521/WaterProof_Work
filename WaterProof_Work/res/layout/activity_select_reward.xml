<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/asr_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <com.qingzu.uitest.view.MyTitleView
        android:id="@+id/asr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="悬赏......"
        app:left_height="30dp"
        app:left_src="@drawable/selector_title_back"
        app:left_width="40dp" />
    <!-- app:right_text="悬赏" -->

    <com.qingzu.custom.control.ZListView
        android:id="@+id/asr_comment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/asr_title"
        android:layout_marginBottom="1dp"
        android:background="#f5f5f5"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:listSelector="@android:color/transparent"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none" />

</RelativeLayout>