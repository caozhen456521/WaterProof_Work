<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5F5F5"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.qingzu.waterproof_work.MyInformationActivity" >

    <com.qingzu.uitest.view.MyTitleView
        android:id="@+id/my_information_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="我的信息"
        app:left_height="30dp"
        app:left_src="@drawable/selector_title_back"
        app:left_width="40dp"
        app:right_vidibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/my_information_picture_rl"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/selector_my_custom" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="头像"
                    android:textColor="@color/my_darkgray"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/im"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp" />

                <com.qingzu.uitest.view.RoundImageView
                    android:id="@+id/my_information_user_photo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:visibility="gone" />

                <ImageButton
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@null"
                    android:src="@drawable/arrows" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/my_information_nickname_rl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_my_custom" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="昵称"
                        android:textColor="@color/my_darkgray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/my_information_nickname_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        android:hint="请填写你的昵称"
                        android:textColor="@color/my_lightgray"
                        android:textSize="18sp" />

                    <ImageButton
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:background="@null"
                        android:src="@drawable/arrows" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cdcdcd" />

                <RelativeLayout
                    android:id="@+id/my_information_contact_name_rl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_my_custom" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="联系人"
                        android:textColor="@color/my_darkgray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/my_information_contact_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        android:hint="请输入联系人姓名"
                        android:textColor="@color/my_lightgray"
                        android:textSize="18sp" />

                    <ImageButton
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:background="@null"
                        android:src="@drawable/arrows" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cdcdcd" />

                <RelativeLayout
                    android:id="@+id/my_information_phonenum_rl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_my_custom" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="联系电话"
                        android:textColor="@color/my_darkgray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/my_information_phonenum_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        android:hint="请输入手机号"
                        android:textColor="@color/my_lightgray"
                        android:textSize="18sp" />

                    <ImageButton
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:background="@null"
                        android:src="@drawable/arrows" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cdcdcd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/my_information_birthday_rl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_my_custom" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="生日"
                        android:textColor="@color/my_darkgray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/my_information_birthday_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        android:hint="请选择您的生日时间"
                        android:textColor="@color/my_lightgray"
                        android:textSize="18sp" />

                    <ImageButton
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:background="@null"
                        android:src="@drawable/arrows" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cdcdcd" />

                <RelativeLayout
                    android:id="@+id/my_information_location_rl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_my_custom" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="所在地区"
                        android:textColor="@color/my_darkgray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/my_information_location_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="选择所在地区"
                        android:maxEms="11"
                        android:singleLine="true"
                        android:textColor="@color/my_lightgray"
                        android:textSize="18sp" />

                    <ImageButton
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:background="@null"
                        android:src="@drawable/arrows" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cdcdcd" />

                <RelativeLayout
                    android:id="@+id/my_information_contact_address_rl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_my_custom" >

                    <TextView
                        android:id="@+id/contact_address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="详细地址"
                        android:textColor="@color/my_darkgray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/my_information_contact_address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="40dp"
                        android:layout_toRightOf="@id/contact_address_tv"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="填写详细地址"
                        android:maxEms="11"
                        android:singleLine="true"
                        android:textColor="@color/my_lightgray"
                        android:textSize="18sp" />

                    <ImageButton
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:background="@null"
                        android:src="@drawable/arrows" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cdcdcd" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>