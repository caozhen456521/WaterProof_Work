<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".CreateTeamActivity" >

    <com.qingzu.uitest.view.MyTitleView
        android:id="@+id/act_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="创建施工队"
        app:left_height="30dp"
        app:left_src="@drawable/selector_title_back"
        app:left_width="40dp"
        app:right_text="确定"
        app:title_background="#383b3d" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="基本信息"
                android:textColor="#3b3b3b"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cdcdcd" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#cdcdcd" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#cdcdcd" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="#cdcdcd" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/act_rl_team_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" >

                        <TextView
                            android:id="@+id/act_tv_team_name"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="施工队名"
                            android:textColor="#3b3b3b"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/act_tv_team_name"
                            android:background="#cdcdcd" />

                        <EditText
                            android:id="@+id/act_et_team_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/act_tv_team_name"
                            android:background="@null"
                            android:hint="列如:卡布达,奥特曼,葫芦娃"
                            android:maxLength="16"
                            android:paddingBottom="14dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="5dp"
                            android:paddingTop="14dp"
                            android:singleLine="true"
                            android:textColor="#3b3b3b"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cdcdcd" />

                    <RelativeLayout
                        android:id="@+id/act_rl_contacts"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" >

                        <TextView
                            android:id="@+id/act_tv_contacts"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="联系人"
                            android:textColor="#3b3b3b"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/act_tv_contacts"
                            android:background="#cdcdcd" />

                        <EditText
                            android:id="@+id/act_et_contacts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/act_tv_contacts"
                            android:background="@null"
                            android:hint="请输入联系人"
                            android:maxLength="8"
                            android:paddingBottom="14dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="5dp"
                            android:paddingTop="14dp"
                            android:singleLine="true"
                            android:textColor="#3b3b3b"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cdcdcd" />

                    <RelativeLayout
                        android:id="@+id/act_rl_phone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" >

                        <TextView
                            android:id="@+id/act_tv_phone"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="联系电话"
                            android:textColor="#3b3b3b"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/act_tv_phone"
                            android:background="#cdcdcd" />

                        <EditText
                            android:id="@+id/act_et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/act_tv_phone"
                            android:background="@null"
                            android:hint="请输入联系电话"
                            android:inputType="phone"
                            android:maxLength="11"
                            android:paddingBottom="14dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="5dp"
                            android:paddingTop="14dp"
                            android:singleLine="true"
                            android:textColor="#3b3b3b"
                            android:textSize="13sp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_gray_line" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/act_rl_location"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/selector_white_tint" >

                        <TextView
                            android:id="@+id/act_tv_location1"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="所在地"
                            android:textColor="#3b3b3b"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/act_tv_location1"
                            android:background="#cdcdcd" />

                        <TextView
                            android:id="@+id/act_tv_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/act_tv_location1"
                            android:hint="选择开工地点"
                            android:paddingBottom="14dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="5dp"
                            android:paddingTop="14dp"
                            android:textColor="#3b3b3b"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cdcdcd" />

                    <RelativeLayout
                        android:id="@+id/act_rl_detail_location"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/selector_white_tint" >

                        <TextView
                            android:id="@+id/act_tv_detail_location1"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="详细地址"
                            android:textColor="#3b3b3b"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/act_tv_detail_location1"
                            android:background="#cdcdcd" />

                        <TextView
                            android:id="@+id/act_tv_detail_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_toRightOf="@id/act_tv_detail_location1"
                            android:hint="定位详细地点"
                            android:paddingBottom="14dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="5dp"
                            android:paddingTop="14dp"
                            android:textColor="#3b3b3b"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/fourth_tv_score_arrows"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/small_arrows"
                            android:textColor="#808080" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#cdcdcd" />

                    <EditText
                        android:id="@+id/act_et_strength_show"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="left|top"
                        android:hint="请输入实力描述,让老板更了解你"
                        android:inputType="textMultiLine"
                        android:minLines="4"
                        android:padding="15dp"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>