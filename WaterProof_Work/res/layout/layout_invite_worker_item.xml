<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invite_rl"
    android:layout_width="match_parent"
    android:layout_height="80dp" 
    android:background="#ffffff">

    <com.qingzu.uitest.view.RoundImageView
        android:id="@+id/riv_invite_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:background="@drawable/defaultimg" />

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/riv_invite_img"
        android:layout_alignTop="@id/riv_invite_img"
        android:layout_toRightOf="@id/riv_invite_img"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/invite_contact_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="王师傅"
                android:textColor="#000000"
                android:textSize="12sp" />
            
            <ImageView 
                android:id="@+id/invite_certification_img"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/certfication"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal" >
            
            
            <TextView 
                android:id="@+id/invite_jiedan_number_tv"
                android:textColor="#3b3b3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接单次数：25"/>

            <RatingBar
                android:layout_marginLeft="10dp"
                android:id="@+id/invite_assess_ratingbar"
                style="@style/MyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5" />

            <TextView
                android:visibility="gone"
                android:id="@+id/invite_points_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="5.0分"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

  <ImageButton 
      android:id="@+id/invite_imgbutton"
      android:layout_centerVertical="true"
      android:layout_marginRight="15dp"
      android:layout_alignParentRight="true"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/invite"/>
   <Button 
       android:visibility="gone"
       android:id="@+id/check_bt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_marginRight="15dp"
       android:layout_centerVertical="true"
       android:background="@drawable/dai_check"
       />
   
   <Button 
       android:visibility="gone"
       android:id="@+id/has_joined_bt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_marginRight="15dp"
       android:layout_centerVertical="true"
       android:background="@drawable/has_joined"
       />
   <Button 
       android:visibility="gone"
       android:id="@+id/has_refused_bt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_marginRight="15dp"
       android:layout_centerVertical="true"
       android:background="@drawable/has_refused"
       />
  
   <View 
       android:layout_alignParentBottom="true"
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="#cdcdcd"/>
  

</RelativeLayout>