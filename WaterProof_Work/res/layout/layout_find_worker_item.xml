<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/find_worker_rl"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#ffffff" >

    <com.qingzu.uitest.view.RoundImageView
        android:id="@+id/riv_find_worker_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:background="@drawable/defaultimg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/riv_find_worker_img"
        android:layout_alignTop="@id/riv_find_worker_img"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/riv_find_worker_img"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/find_worker_contact_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="王师傅"
                android:textColor="#000000"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/find_worker_certification_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/certfication" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/find_worker_jiedan_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接单次数：25"
                android:textColor="#3b3b3b" />

            <RatingBar
                android:id="@+id/find_worker_assess_ratingbar"
                style="@style/MyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5" />

            <TextView
                android:id="@+id/find_worker_points_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="5.0分"
                android:textColor="#000000"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/find_worker_imgbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/call_phone" />

        <Button
            android:id="@+id/find_worker_chat_bt"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/click_chat"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#cdcdcd" />

</RelativeLayout>