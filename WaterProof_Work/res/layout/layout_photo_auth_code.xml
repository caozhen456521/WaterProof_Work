<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lpac_room"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#ffffff"
    android:padding="5dp" >

    <TextView
        android:id="@+id/lpac_tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="7dp"
        android:textColor="#706e6e"
        android:textSize="15dp" />

    <RelativeLayout
        android:id="@+id/lpac_rl_cuth_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lpac_tv_hint"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/lpac_et_cuth_code"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_rectangle_gray"
            android:gravity="center"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/lpac_iv_photo"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/lpac_rl_cuth_code"
        android:layout_marginTop="7dp"
        android:text="看不清楚请点击图片换一张"
        android:textColor="#cdcdcd"
        android:textSize="10dp" />

</RelativeLayout>