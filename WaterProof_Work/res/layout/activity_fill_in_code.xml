<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.qingzu.waterproof_work.FillInCodeActivity" >

    <com.qingzu.uitest.view.MyTitleView
        android:id="@+id/fill_in_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="填写验证码"
        app:left_height="30dp"
        app:left_src="@drawable/selector_title_back"
        app:left_width="40dp"
        app:title_background="@color/title_background_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fill_in_code_title"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="我们已经发送了验证码到您的手机"
            android:textColor="#808080" />

        <TextView
            android:id="@+id/fill_in_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:text="13826536983"
            android:textColor="#3b3b3b"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textColor="#3b3b3b"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/fill_in_code_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:hint="请输入您的验证码"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="#3b3b3b"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#9ac0d5" />
        </RelativeLayout>

        <Button
            android:id="@+id/fill_in_bt_next"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/forget_password"
            android:layout_marginLeft="11.5dp"
            android:layout_marginRight="11.5dp"
            android:layout_marginTop="46dp"
            android:background="@drawable/shape_rounded_blue_button"
            android:text="下一步"
            android:textColor="@drawable/selector_button_font_white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>