<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.qingzu.waterproof_work.JoinConstructionTeamActivity" >

   <com.qingzu.uitest.view.MyTitleView
        android:id="@+id/join_construction_team_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:center_text="加入施工队"
        app:left_height="30dp"
        app:left_src="@drawable/selector_title_back"
        app:left_width="40dp"
        app:right_vidibility="gone"
        />
    <com.qingzu.custom.control.ZListView
            android:id="@+id/join_construction_team_list_zlv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:divider="@null"
            android:scrollbars="none" />

</LinearLayout>
