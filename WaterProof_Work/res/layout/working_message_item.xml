<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wm_rl_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/selector_my_custom" >

  <TextView 
        android:id="@+id/wm_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="40dp"
         android:text="你好:"
         android:singleLine="true"
         android:maxEms="7"
         android:ellipsize="end"
         android:textSize="16sp"
         android:textColor="#000000"
         android:layout_marginTop="10dp"
        /> 
    <ImageView 
        android:id="@+id/wm_img_delete_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/deletebtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/wm_tv_message"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:maxLines="2"
        android:textSize="14sp"
        android:layout_below="@id/wm_tv_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:text="您的工人信息认证失败!原因照片模糊,身份证信息与所填信息不符合."
        android:textColor="#000000" />
     <TextView
                android:id="@+id/wm_tv_info_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_above="@+id/wm_tv_date"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff" />

    <TextView
        android:layout_marginBottom="10dp"
        android:id="@id/wm_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/wm_tv_message"
        android:layout_marginRight="20dp"
        android:text="2015年12月13日"
        android:textColor="#cdcdcd" />
     <View 
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#f5F5F5"/>

</RelativeLayout>