<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    <Button
        android:id="@+id/team_member_making_calls_bt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="11.5dp"
        android:layout_marginRight="11.5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_rounded_blue_button"
        android:text="拨打电话"
        android:textColor="@drawable/selector_button_font_white"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/team_member_making_calls_bt" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp" >

                    <TextView
                        android:id="@+id/job_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="工作经验"
                        android:textColor="#3b3b3b" />

                    <TextView
                        android:id="@+id/team_member_job_experience_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/job_tv"
                        android:text="10年"
                        android:textColor="#3b3b3b" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp" >

                    <TextView
                        android:id="@+id/professional_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业技能"
                        android:textColor="#3b3b3b" />

                    <TextView
                        android:id="@+id/team_member_professional_skill_tv"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/professional_tv"
                        android:text="SBS防水卷材施工   自粘卷材施工  高分子类卷材施工"
                        android:textColor="#3b3b3b" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp" >

                    <TextView
                        android:id="@+id/whether_insurance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="是否有保险"
                        android:textColor="#3b3b3b" />

                    <TextView
                        android:id="@+id/team_member_insurance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/whether_insurance_tv"
                        android:text="有"
                        android:textColor="#3b3b3b" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp" >

                    <TextView
                        android:id="@+id/whether_certification_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="有无技工证"
                        android:textColor="#3b3b3b" />

                    <TextView
                        android:id="@+id/team_member_certification_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/whether_certification_tv"
                        android:text="有"
                        android:textColor="#3b3b3b" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="11dp" >

                    <com.qingzu.uitest.view.RoundImageView
                        android:id="@+id/riv_team_member_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/defaultimg" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/riv_team_member_img"
                        android:layout_alignTop="@id/riv_team_member_img"
                        android:layout_toRightOf="@id/riv_team_member_img"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/team_member_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="赵先生"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:orientation="horizontal" >

                            <RatingBar
                                android:id="@+id/team_member_detail_assess_ratingbar"
                                style="@style/MyRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="5" />

                            <TextView
                                android:id="@+id/team_member_points_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="5.0分"
                                android:textColor="#3b3b3b" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="接单次数："
                            android:textColor="#3b3b3b" />

                        <TextView
                            android:id="@+id/team_member_jie_dan_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24"
                            android:textColor="#3b3b3b" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作地点:"
                        android:textColor="#3b3b3b" />

                    <TextView
                        android:id="@+id/team_member_work_place_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="杭州市江干区九堡镇"
                        android:textColor="#3b3b3b" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/team_member_detail_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/gongcheng" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>